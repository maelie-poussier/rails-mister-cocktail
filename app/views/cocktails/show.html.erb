
<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to "Delete", dose_path(dose),  method: :delete , class: "btn btn-danger btn-xs" %>
  </li>
  <% end %>
</ul>

<%= link_to "Create dose", new_cocktail_dose_path(@cocktail) %>
