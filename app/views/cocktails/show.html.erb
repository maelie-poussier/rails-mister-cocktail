<div class="banner"id="show" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
  <div class="container">
    <div class="text-center m-5">
      <h1 style = "color: #89c9b8"><%= @cocktail.name %></h1>
    </div>
    <div class="ingredients">
          <h4 style="color: white">Ingredients :</h4>
          <ul class="ingredient-list" style="padding: 0;list-style: none; color: white">
            <% @cocktail.doses.each do |dose| %>
              <li>

                  <%= link_to dose_path(dose),  method: :delete, data: { confirm: "Are you sure?" }, :class=> "you_class" do %><i class="fas fa-trash-alt" aria-hidden="true" target="_blank" style = "color: white"></i><% end %>

                <%= dose.ingredient.name %> <%= "-" %> <%= dose.description %>
              </li>
            <% end %>
          </ul>
        </div>

    </ul>
    <div class="back">
      <%= link_to cocktails_path, class: 'btn btn-dark' do %>
        <i class="fas fa-hand-point-left">  Back</i>
      <% end %>
      <%= link_to "Create dose", new_cocktail_dose_path(@cocktail), :class=> "btn btn-dark"  %>
    </div>
  </div>
</div>


